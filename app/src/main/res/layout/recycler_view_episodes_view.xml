<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    xmlns:tools="http://schemas.android.com/tools">
    
    <ImageView
        android:id="@+id/episode_imageView"
        android:layout_width="150dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/episode_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        android:maxLines="2"
        android:ellipsize="end"
        tools:text="Нелегальная магия"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/episode_imageView"
        tools:ignore="RtlSymmetry" />

    <TextView
        android:id="@+id/description_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textColor="#AFAFAF"
        android:maxLines="2"
        android:ellipsize="end"
        tools:text="Квентин и Джулия приглашены на тест их волшебных навыков..."
        app:layout_constraintStart_toEndOf="@id/episode_imageView"
        app:layout_constraintTop_toBottomOf="@id/episode_title"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/year_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textColor="#AFAFAF"
        tools:text="2015"
        app:layout_constraintStart_toEndOf="@id/episode_imageView"
        app:layout_constraintTop_toBottomOf="@id/description_textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>